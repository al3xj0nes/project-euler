<Window x:Class="project_euler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_euler"
        mc:Ignorable="d"
        Title="project-euler [@xander__j]"
        MinHeight="300"
        MinWidth="725"
        Height="600"
        Width="725"
        Background="#FF2C2C2C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            x:Name="label"
            Content="Solution"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10,10,10,10"
            Foreground="White"/>
        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            x:Name="comboSolutionSelection"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10,10,10,10">
            <ComboBoxItem Content="[1] Multiples of 3 and 5"/>
            <ComboBoxItem Content="[2] Fibonacci numbers" Cursor="None"/>
            <ComboBoxItem Content="[3] Largest prime factor"/>
            <ComboBoxItem Content="[4] Largest palindrome product"/>
            <ComboBoxItem Content="[5] Smallest multiple"/>
            <ComboBoxItem Content="[6] Sum Square Difference"/>
            <ComboBoxItem Content="[7] 10001st prime"/>
            <ComboBoxItem Content="[8] Largest product in a series"/>
            <ComboBoxItem Content="[9] Special Pythagorean triplet"/>
        </ComboBox>
        <Button
            Grid.Row="0"
            Grid.Column="2"
            x:Name="btnRunSolution"
            Content="Run"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10,10,10,10"
            Click="btnRunSolution_Click"/>
        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            x:Name="txtOutputDisplay"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="10,10,10,10"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>